@{
    ViewData["Title"] = "Políticas de Privacidad";
}

<section class="privacy-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="access-requirements">
                    <div class="text-center mb-5">
                        <i class="fas fa-shield-alt security-icon"></i>
                        <h2 class="display-title">Acceso Seguro a Recursos Clínicos</h2>
                    </div>

                    <div class="mb-4">
                        <h3 class="text-primary">🔐 Requisitos de Acceso</h3>
                        <ul class="list-unstyled">
                            <li class="mb-3">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Registro obligatorio para personal autorizado
                            </li>
                            <li class="mb-3">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Verificación de credenciales profesionales
                            </li>
                            <li class="mb-3">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Acceso por roles (Médico, Enfermero, Administrativo)
                            </li>
                        </ul>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="feature-card">
                                <h4 class="text-primary">📋 Política de Datos</h4>
                                <p class="small">
                                    Todos los registros médicos están protegidos bajo
                                    estándares HIPAA y encriptación AES-256
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="feature-card">
                                <h4 class="text-primary">🔒 Auditoría de Accesos</h4>
                                <p class="small">
                                    Registro detallado de todas las actividades con
                                    timestamp y firma digital
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-5 text-center">
                        <a asp-area="Identity" asp-page="/Account/Register"
                           class="btn cta-button">
                            <i class="fas fa-user-plus me-2"></i>
                            Registrarse Ahora
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>